<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 필터클릭시 메뉴 slide up -->
    <LinearLayout
        android:id="@+id/id_submenu_filter"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <!--뒤로가기 버튼-->
            <ImageView
                android:id="@+id/id_icon_backspace"
                android:background="#CCFFA9B0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#CCFFA9B0">

            <!--필터 고르기 (현재 임시 버튼)-->
            <HorizontalScrollView
                android:id="@+id/id_filter_select"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fadeScrollbars="true"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/id_filter_select_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/id_filter1"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter3"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter4"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter5"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter6"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter7"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter8"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter9"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:id="@+id/id_filter10"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:text="1"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>